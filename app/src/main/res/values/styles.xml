<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="swipePicker">@style/SwipePicker</item>
    </style>

    <style name="SwipePicker" parent="@style/XcoRp.Widget.SwipePicker">
        <item name="looped">true</item>
    </style>

    <style name="SwipePicker.Number">
        <item name="android:minWidth">@dimen/number_min_width</item>
        <item name="backgroundInputTint">@color/number_background</item>
        <item name="hintTextAppearance">@style/SwipePicker.NumberHint</item>
        <item name="inputTextAppearance">@style/SwipePicker.NumberInput</item>
        <item name="hoverViewStyle">@style/SwipePicker.NumberHover</item>
    </style>

    <style name="SwipePicker.NumberHint" parent="@style/XcoRp.TextAppearance.SwipePicker.Hint">
        <item name="android:textSize">@dimen/number_hint_text_size</item>
        <item name="android:textColor">@color/number_hint</item>
    </style>

    <style name="SwipePicker.NumberInput" parent="@style/XcoRp.TextAppearance.SwipePicker.Input">
        <item name="android:textColor">@color/number_input</item>
    </style>

    <style name="SwipePicker.NumberHover" parent="@style/XcoRp.Style.SwipePicker.HoverView">
        <item name="android:minWidth">@dimen/number_hover_min_width</item>
        <item name="android:padding">@dimen/number_hover_padding</item>
        <item name="android:textSize">@dimen/number_hover_text_size</item>
        <item name="android:textColor">@color/number_hover_text</item>
        <item name="android:color">@color/number_hover_background</item>
    </style>

    <style name="SwipePicker.HoverViewWide" parent="@style/XcoRp.Style.SwipePicker.HoverView">
        <item name="android:minWidth">@dimen/wide_width_hover</item>
    </style>

    <style name="SwipePicker.HoverViewScale" parent="@style/XcoRp.Style.SwipePicker.HoverView">
        <item name="android:color">@color/scale_background</item>
    </style>
</resources>
