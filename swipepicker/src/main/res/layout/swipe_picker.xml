<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:minWidth="@dimen/swipePicker_minWidth"
    android:orientation="vertical"
    tools:layout_gravity="center">

    <TextView
        android:id="@android:id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:includeFontPadding="false"
        android:labelFor="@android:id/input"
        android:maxLines="1"
        android:padding="@dimen/swipePicker_padding"
        android:textAppearance="@style/TextAppearance.XcoRp.Widget.SwipePicker.Hint" />

    <FrameLayout
        android:id="@android:id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:background="@drawable/bg_swipe_picker">

        <EditText
            android:id="@android:id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:hint="@null"
            android:includeFontPadding="false"
            android:inputType="number"
            android:maxLength="@integer/swipePicker_maxLength"
            android:maxLines="1"
            android:padding="@dimen/swipePicker_padding"
            android:textAppearance="@style/TextAppearance.XcoRp.Widget.SwipePicker.Input"
            android:textColor="@null" />
    </FrameLayout>
</GridLayout>