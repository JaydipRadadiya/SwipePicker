<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="swipePicker" format="reference" />

    <declare-styleable name="SwipePicker">
        <attr name="android:minWidth" />
        <attr name="android:padding" />
        <attr name="android:hint" />
        <attr name="android:maxLength" />
        <attr name="android:state_activated" />
        <attr name="hintTextAppearance" format="reference" />
        <attr name="inputTextAppearance" format="reference" />
        <attr name="inputBackground" format="color|reference" />
        <attr name="deactivateGesture" format="boolean" />
        <attr name="manualInput" format="boolean" />
        <attr name="inputType">
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
        </attr>
        <attr name="scale" format="reference" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="step" format="float" />
        <attr name="value" format="float" />
        <attr name="restriction">
            <flag name="none" value="0x00000000" />
            <flag name="lower" value="0x00000001" />
            <flag name="upper" value="0x00000002" />
        </attr>
        <attr name="hoverViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="HoverView">
        <attr name="android:minWidth" />
        <attr name="android:padding" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:color" />
    </declare-styleable>
</resources>