<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/swipePicker_strokeWidth" android:color="?attr/colorPrimary" />
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/swipePicker_radiusCorner" />
        </shape>
    </item>
    <item android:state_activated="true" android:state_selected="false">
        <shape>
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/swipePicker_radiusCorner" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/swipePicker_strokeWidth" android:color="?attr/colorPrimary" android:dashGap="@dimen/swipePicker_dashGap" android:dashWidth="@dimen/swipePicker_dashWidth" />
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/swipePicker_radiusCorner" />
        </shape>
    </item>
</selector>